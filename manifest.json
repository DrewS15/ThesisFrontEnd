{
    "name": "Text to Wikipedia",
    "description": "Highlight over a word to go to that Wikipedia article",
    "version": "1.0",
    "manifest_version": 3,
    "action": {"default_popup": "popup.html"},
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "sandbox": {
        "pages": [
          "popup.html"
        ]
      },
      "content_security_policy": {
        "sandbox": "sandbox allow-scripts; script-src 'unsafe-eval' 'self' https://pyscript.net https://cdn.jsdelivr.net"
      },
      "permissions":[
        "contextMenus",
        "tabs",
        "storage",
        "scripting",
        "activeTab"
    ]
}